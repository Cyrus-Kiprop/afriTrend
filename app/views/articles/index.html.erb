<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.user.first_name + ' ' + article.user.last_name %></td>
        <td><%=image_tag article.image %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= "#{article.votes.count}votes" %></td>
        <%if user_signed_in? %>
          <td>
            <%= upvote_or_downvote_btn(article) %>
          </td>
          <td><%= article.categories.first.name if article.categories.exists? %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
