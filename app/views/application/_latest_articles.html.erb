<section class="section-wrapper">
  <h2 class="section-header">Latest Articles</h2>
  <div class="latest-articles">
    <% if content_nil?(data) %>
      <h2 style="font-weight: 1000; font-size: 14px; text-align: center">No Result at the moment!</h2>
    <% else %>
    <% data.each do |article|%>
      <%= link_to article_path(article), class: "latest-articles__item" do %>
        <%unless article.categories.empty?%>
          <div class="latest-articles__img" style="background-image: url(<%= process_img(article) %>);">
            <div class="latest-articles__content">
              <div class="category__item-head">
                <h1 style='border-bottom: 4px solid  <%= category_name_border_color(article.categories.first.name)%>'><%= article.categories.first.name %></h1>
                <span class="latest-articles__votes ml-auto"><%= article.votes.count%> votes</span>
              </div>
              <h2 class="latest-articles__title"> <%=article.title%></h2>
            </div>
          </div>
        <%end%>
      <%end%>
    <%end%>
  <%end%>
  </div>
</section>
