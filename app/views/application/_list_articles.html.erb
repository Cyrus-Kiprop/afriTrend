

<main class="wrapper">

    <% if articles.exists?%>
      <section class="hero">
  <div class=" hero hero__bg-img " style="background-image: url(<%= rails_blob_path(articles.first.image) %>);">
    <h1><%= hero_text%></h1>

    <article>
      <p><%= split_article_content(articles.first.content)%></p>
      <a href="#">Browse </a>
    </article>
  </div>
  </section>
<% else%>
  <section class="d-flex align-items-center justify-content-center" style="height: 80vh;" >
    <h2 style="font-weight: 1000; font-size: 60px;" >No Result at the moment!</h2>
  </section>
<% end %>
  <section class="category-wrapper">

    <% articles.uniq[0..5].each do |article|%>
      <div class= "category__item ">

      <div class="latest-articles__img" style="background-image: url(<%= rails_blob_path(article.image) %>);">
      </div>

      <div class="latest-articles__content">
        <div class="category__item-head">
          <h1 style='border-bottom: 4px solid  <%= category_name_border_color(article.categories.first.name)%>'><%= article.categories.first.name %></h1>
        </div>
        <h2 class="category__item-title"> <%=article.title%></h2>
        <p class="category__item-desc"> <%=article.content%></p>
        <%= link_to 'Read More', articles_path(articles), class: 'category__item-read-more'%>


      </div>

      </div>
    </div>
    <%end%>

  </section>

  <section class="section-wrapper">
    <h2 class="more-articles__header">More from this topic</h2>
    <div class="more-articles">
    <% if  (articles[9..-1].nil?) %>
           <h2 style="font-weight: 1000; font-size: 60px;">No Result at the moment!</h2>
         <%else%>
           <% articles[9..-1].uniq.each do |article|%>
<div class="more-articles__item">

    <div class="more-articles__img" style="background-image: url(<%= rails_blob_path(article.image) %>);">
  </div>
  <div class="more-articles__content">
    <%= map_links(article.categories.first.name) unless article.categories.empty? %>
  <h3 class="more-articles__title"><%= article.title%></h3>
  <p><%= split_article_content(article.content)%></p>

    <div class="more-articles__user-duration">
    <span><%=link_to  article.user.first_name + ' ' + article.user.last_name, user_path(article.user) %></span>
    <span><%= duration(article.content)%> min read </span>
    </div>


  </div>
</div>
    <%end%>
    <%end%>
    </div>

  </section>
</main>
<footer>
